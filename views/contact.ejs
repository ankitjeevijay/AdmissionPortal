<%- include('./header.ejs') %>

    <div class="container">
        <div class="row pt-5">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="card p-3">
                    <h1 class="text-center py-3">Contact Us</h1>

                    <% if(message.length > 0){ %>
                        <div class="alert alert-danger text-center">
                           <%= message %>
                        </div>
            
                    <% } %>
                    <% if(message1.length > 0){ %>
                        <div class="alert alert-success text-center">
                           <%= message1 %>
                        </div>
            
                    <% } %>

                    <form action="/contactInsert" method="post" enctype="multipart/form-data">
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-default">User Name</span>
                            <input type="text" name="userName" class="form-control" aria-label="Sizing example input"
                                aria-describedby="inputGroup-sizing-default">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">@</span>
                            <input type="email" name="email" class="form-control" placeholder="abc@gmail.com">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-default">Mobile No</span>
                            <input type="tel" name="mobileNo" class="form-control">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Address</span>
                            <input type="text" name="address" class="form-control">
                        </div>
                        <div class="form-group text-center pb-2">
                            <button type="submit" class="btn btn-lg btn-block px-4"
                                style="background: #12587a; color:#ffff;">Send Message</button>
                        </div>

                    </form>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
    <%- include('./footer.ejs') %>